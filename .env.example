# ProductScraper Environment Configuration
# Copy this file to .env and fill in your actual credentials

# =============================================================================
# SCRAPER CREDENTIALS
# =============================================================================

# PetFoodEx scraper credentials
PETFOOD_USERNAME=your_petfoodex_username
PETFOOD_PASSWORD=your_petfoodex_password

# Phillips scraper credentials
PHILLIPS_USERNAME=your_phillips_username
PHILLIPS_PASSWORD=your_phillips_password

# Orgill scraper credentials
ORGILL_USERNAME=your_orgill_username
ORGILL_PASSWORD=your_orgill_password

# =============================================================================
# SHOPSITE API CREDENTIALS
# =============================================================================

# ShopSite OAuth2 credentials for XML interface
SHOPSITE_CLIENT_ID=your_shopsite_client_id
SHOPSITE_SECRET_KEY=your_shopsite_secret_key
SHOPSITE_AUTHORIZATION_CODE=your_shopsite_auth_code
SHOPSITE_AUTH_URL=https://yourstore.shopsite.com/xml/

# Alternative ShopSite login credentials (if OAuth2 not available)
SHOPSITE_USERNAME=your_shopsite_username
SHOPSITE_PASSWORD=your_shopsite_password

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Set to 'true' to enable debug logging
DEBUG=false

# Database path (optional - defaults to data/databases/products.db)
# DATABASE_PATH=data/databases/products.db

# Selenium browser settings (optional)
# SELENIUM_HEADLESS=true
# SELENIUM_TIMEOUT=30